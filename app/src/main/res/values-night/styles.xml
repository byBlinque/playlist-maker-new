<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MainAcBG">
        <item name="android:background">@color/bg_color_dark</item>
    </style>
    <style name="MainAcButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="SettingsAcBG">
        <item name="android:background">@color/bg_color_dark</item>
    </style>
    <style name="SettingsAcMenuItemWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_item_height_size</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/settings_menu_item_padding_horizontal</item>
    </style>
    <style name="SettingsAcMenuItemText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SettingsAcMenuItemIcon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:tint">@color/white</item>
        <item name="trackTint">@color/bg_color</item>
        <item name="thumbTint">@color/bg_color</item>
    </style>
</resources>